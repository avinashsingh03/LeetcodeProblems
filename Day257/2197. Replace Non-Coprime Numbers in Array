class Solution {
public:
    vector<int> replaceNonCoprimes(vector<int>& nums) {
        vector<int> result;
        //processing left to right
        for(int num: nums){
            while(!result.empty()){
                int prev=result.back();
                int curr=num;
                int GCD=gcd(prev,curr);
                if(GCD==1){
                    break;
                }
                result.pop_back();
                int LCM=prev/ GCD*curr;

                num=LCM;//merged num
            }

            result.push_back(num);//merged result put back to result

        }
        return result;
        
    }
};
