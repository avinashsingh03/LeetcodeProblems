class Solution {
public:
    string add(string num1,string num2){
        int index1=num1.size()-1, index2=num2.size()-1,sum=0;
        string ans;
        //handling small number
        while(index2>=0){
            sum+=(num1[index1]-'0')+(num2[index2]-'0');
            char c='0'+ sum%10;
            ans+=c;
            sum/=10;
            index1--;
            index2--;
        }
        //handling large number
        while(index1>=0){
            sum+=(num1[index1]-'0');
            char c='0'+ sum%10;
            ans+=c;
            sum/=10;
            index1--;
        }
        if(sum){
            ans+='1';
        }
        reverse(ans.begin(),ans.end());
        return ans;
    }

    string addStrings(string str1, string str2) {
        if(str1.size()>str2.size()){
            return add(str1,str2);
        }
        else{
            return add(str2,str1);
        }
    }
};
