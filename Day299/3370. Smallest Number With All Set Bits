class Solution {
public:
    int smallestNumber(int n) {
        int num=1;
        // for(int i=0;i<11;i++){
        //     if(pow(2,i)>n){
        //         num=pow(2,i);
        //         break;
        //     }
        // }
        
        //more optimized
        while(num<=n){
            num*=2;
        }
        return num-1;
    
    }
};
