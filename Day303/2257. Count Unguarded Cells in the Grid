class Solution {
public:
    int countUnguarded(int m, int n, vector<vector<int>>& guards, vector<vector<int>>& walls) {
        vector<vector<int>> cells(m, vector<int>(n, 0));
        //0:unguarded, 1:guard, -1:wall, 2:guarded
        for (auto &g : guards) cells[g[0]][g[1]] = 1;
        for (auto &w : walls)  cells[w[0]][w[1]] = -1;

        // Horizontal sweeps
        for (int i = 0; i < m; i++) {
            bool seen = false;
            for (int j = 0; j < n; j++) {
                if (cells[i][j] == 1){ 
                    seen = true;}
                else if (cells[i][j] == -1) {
                    seen = false;}
                else if (seen){
                    cells[i][j] = 2;}
            }
            seen = false;
            for (int j = n - 1; j >= 0; j--) {
                if (cells[i][j] == 1) {
                    seen = true;}
                else if (cells[i][j] == -1) {
                    seen = false;}
                else if (seen){
                    cells[i][j] = 2;}
            }
        }

        // Vertical sweeps
        for (int j = 0; j < n; j++) {
            bool seen = false;
            for (int i = 0; i < m; i++) {
                if (cells[i][j] == 1){
                    seen = true;}
                else if (cells[i][j] == -1) {
                    seen = false;}
                else if (seen) {
                    cells[i][j] = 2;}
            }
            seen = false;
            for (int i = m - 1; i >= 0; i--) {
                if (cells[i][j] == 1) {
                    seen = true;}
                else if (cells[i][j] == -1) {
                    seen = false;}
                else if (seen) {
                    cells[i][j] = 2;}
            }
        }

        int count = 0;
        for (int i = 0; i < m; i++)
            for (int j = 0; j < n; j++)
                if (cells[i][j] == 0)
                    count++;
        
        return count;
    }
};
