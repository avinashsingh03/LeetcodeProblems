class Solution {
public:
    int findClosest(int x, int y, int z) {
        if(abs(y-z)>abs(x-z)){ //person 1 reaches first
            return 1;
        }
        else if(abs(x-z)>abs(y-z)){ //person 2 reaches first
            return 2;
        }
        else{// both reaches at same time
            return 0;
        }
    }
};
