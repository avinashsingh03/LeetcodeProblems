/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    void deleteNode(ListNode* node) {
        // with loop

        // ListNode* previous=NULL;
        // ListNode* last=node;
        // while(last->next!=NULL){
        //    previous=last;
        //    last=previous->next;
        //    previous->val=last->val;
        // } 
        // previous->next=last->next;

        // without loop
        ListNode* del=node->next;
        node->val=del->val;
        node->next=del->next;
        delete del;
        del=NULL;

    }
};
