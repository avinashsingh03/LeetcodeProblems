class Solution {
public:
    bool BinarySearch(vector<int>& nums,int start,int end,int target){
        while(start<=end){
            int mid=start+(end-start)/2;
            if(nums[mid]==target){
                return true;
            }
            else if(target>nums[mid]){
                start=mid+1;
            }
            else{
                end=mid-1;
            }
        }
        return false;
    }
    bool search(vector<int>& nums, int target) {
        int pivot;
        int size=nums.size();
        for(int i=0;i<size-1;i++){
            if(nums[i]>nums[i+1]){
                pivot=i;
                break;
            }   
        }
        if(BinarySearch(nums,0,pivot,target) || BinarySearch(nums,pivot+1,size-1,target)){
            return true;
        }
        return false; 
    }
};
