/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
        if(list1==NULL){
            if(list2!=NULL){
                return list2;
            }
            else{
                return list1;
            }
        }

        ListNode* temp1=list1;
        ListNode* temp2=list2;
        ListNode* last=NULL;
        vector<int> nodes;
        
        while(temp1!=NULL){
            nodes.push_back(temp1->val);
            if(temp1->next==NULL){
                last=temp1;
            }
            temp1=temp1->next;
            
        }
        while(temp2!=NULL){
            nodes.push_back(temp2->val);
            temp2=temp2->next;
        }
        last->next=list2;
        sort(nodes.begin(),nodes.end());
        ListNode* temp=list1;
        
        for(int i=0;i<nodes.size();i++){
            temp->val=nodes[i];
            temp=temp->next;
            
        }
        return list1;
        
    } 
};
