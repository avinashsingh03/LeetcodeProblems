class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int row=matrix.size(),col=matrix[0].size(),start,end,mid,row_idx,col_idx;
        if(target<matrix[0][0] || target>matrix[row-1][col-1]){
            return 0;
        }
        start=0;
        end=row*col-1;
        while(start<=end){
            mid=start+(end-start)/2;
            row_idx=mid/(col);
            col_idx=mid%(col);
            if(matrix[row_idx][col_idx]==target){
                return 1;
            }
            else if(matrix[row_idx][col_idx]>target){
                end=mid-1;
            }
            else{
                start=mid+1;
            }
        }
        return 0;
    }
};
