/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *getIntersectionNode(ListNode *headA, ListNode *headB) {
        vector<ListNode*> address;
        ListNode* temp=headA;
        while(temp!=NULL){
            address.push_back(temp);
            temp=temp->next;
        }
        sort(address.begin(),address.end());
        temp=headB;
        while(temp!=NULL){
            if(binary_search(address.begin(),address.end(),temp)){
                return temp;
            }
            else{
                temp=temp->next;
            }
        }
        return temp;
    }
};
