class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) {
        //merging both vector
        for(auto val:nums2){
            nums1.push_back(val);
        }

        //sorting merged vector
        sort(nums1.begin(),nums1.end());

        int size=nums1.size();

        if(size%2==0){//for even size
            return (nums1[size/2-1] + nums1[size/2])/2.0;
        }

        return nums1[size/2]; //for odd size
    }
};

//by self
