class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {
        //pahle transpose kro
        int size=matrix.size();
        for(int i=0;i<size;i++){
            for(int j=0;j<i;j++){
                swap(matrix[i][j],matrix[j][i]);
            }
        }
        //then reverse each row
        for(int i=0;i<size;i++){
            int start=0,end=size-1;
            while(start<end){
                swap(matrix[i][start],matrix[i][end]);
                start++;
                end--;
            }
        }
        return;
    }
};
