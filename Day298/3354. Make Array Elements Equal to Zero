class Solution {
public:
    int countValidSelections(vector<int>& nums) {
        int currSum=0,left, right,result=0;;
        int totalSum=accumulate(nums.begin(),nums.end(),0);
        for(int i=0;i<nums.size();i++){
            currSum+=nums[i];
            if(nums[i]!=0){
                continue;
            }

            left=currSum;
            right=totalSum-currSum;
            if(left==right){
                result+=2;
            }
            if(abs(left-right)==1){
                result+=1;
            }

        }
        return result;
    }
};
