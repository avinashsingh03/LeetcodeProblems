class Solution {
public:
    int maxBottlesDrunk(int numBottles, int numExchange) {
        int emptyBottles, drinkBottles;
        drinkBottles=numBottles; //sara paani pi jao
        emptyBottles=numBottles; //sara bottle khali kr do
        numBottles=0;
        while(numBottles>0 || emptyBottles>=numExchange){
            if(numBottles>0){ //phir se paani pi jao
                drinkBottles+=numBottles;
                emptyBottles+=numBottles;
                numBottles=0;
            }
            else{
                emptyBottles-=numExchange; //khali bottle exchange krk paani le aao
                numBottles++;
                numExchange++;
            }
        }
        return drinkBottles;
    }
};

//done by self
